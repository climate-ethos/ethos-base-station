{
  "name": "ethos-electron-app",
  "version": "1.3.1",
  "description": "Project that displays temperature information and presents warnings/advice depending on the situation",
  "productName": "Ethos Heat Monitor",
  "author": "Connor Forbes <cforbes.software@gmail.com>",
  "private": true,
  "scripts": {
    "start": "quasar dev -m electron",
    "build": "quasar build -m electron",
    "build:dev": "quasar build -m electron -d",
    "lint": "eslint --ext .js,.ts,.vue ./",
    "format": "prettier --write \"**/*.{js,ts,vue,scss,html,md,json}\" --ignore-path .gitignore",
    "test": "echo \"See package.json => scripts for available tests.\" && exit 0",
    "test:serve": "quasar dev --debug",
    "test:unit": "vitest",
    "test:e2e": "yarn playwright test --ui",
    "test:e2e:ci": "yarn playwright test",
    "test:unit:ci": "vitest run"
  },
  "dependencies": {
    "@electron/remote": "^2.0.9",
    "@quasar/extras": "^1.16.5",
    "@types/pouchdb": "^6.4.0",
    "axios": "^1.3.4",
    "chart.js": "^4.3.0",
    "chartjs-plugin-datalabels": "^2.2.0",
    "events": "^3.3.0",
    "pinia": "^2.0.33",
    "pinia-plugin-persistedstate": "^3.1.0",
    "pouchdb": "^8.0.1",
    "pouchdb-browser": "^8.0.1",
    "quasar": "^2.12.3",
    "simple-keyboard": "^3.5.30",
    "socket.io-client": "^4.6.1",
    "vue": "^3.0.0",
    "vue-chartjs": "^5.2.0",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.37.1",
    "@quasar/app-vite": "^1.2.1",
    "@quasar/quasar-app-extension-testing": "^2.1.0",
    "@quasar/quasar-app-extension-testing-unit-vitest": "^0.3.0",
    "@types/node": "^12.20.55",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "@vue/test-utils": "^2.0.0",
    "autoprefixer": "^10.4.13",
    "dotenv": "^16.0.3",
    "electron": "^22.3.2",
    "electron-packager": "^15.5.2",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-vue": "^9.9.0",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5",
    "vitest": "^0.15.0"
  },
  "engines": {
    "node": "^18 || ^16 || ^14.19",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1"
  }
}
